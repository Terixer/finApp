{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <h3>FinApp</h3>
                </div>
                  {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form class="pt-3">
                  <div class="form-group">
                    <input class="form-control form-control-lg" value="{{ last_username }}" type="email" name="email" placeholder="Email" autofocus required>
                  </div>
                  <div class="form-group">
                    <input type="password" name="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password" required>
                  </div>
                  <div class="mt-3">
                   <input type="submit" value="Login" id='input_submit' class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn"  class='input_field'>
                  </div>
                   <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
                  {# <div class="my-2 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                      <label class="form-check-label text-muted">
                       See https://symfony.com/doc/current/security/remember_me.html
                        <input type="checkbox" class="form-check-input"> Keep me signed in </label>
                    </div>
                    <a href="#" class="auth-link text-black">Forgot password?</a>
                  </div> #}
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
</form>
{% endblock %}
