<div class="{% block grid %}col-lg-6{% endblock %} grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			{% if block('card_title') is defined %}
				<h4 class="card-title">
					{{block('card_title')}}
				</h4>
			{% endif %}
			{% block card_content %}{% endblock %}
		</div>
	</div>
</div>
